.dialog-underlay
  display: none
  position: fixed
  z-index: 999
  top: 0
  right: 0
  bottom: 0
  left: 0
  height: 100%
  text-align: center
  vertical-align: middle
  background: vendor-value(radial-gradient(rgba(#070E17, 0.5), rgba(#002736, .75)))
  
  &.open
    display: block
  
  .dialog
    position: fixed
    display: inline-block
    top: 5%
    left: 25%
    max-width: 80%
    max-height: 600px
    overflow-y: auto
    margin: 20px
    padding: 2px
    background-color: $light-gray
    color: $dark-gray
    border-radius: 5px
    box-shadow: 0 5px 10px rgba(#070E17, 0.33), 0 0 0 3px rgba($blue, 0.67)
    
    .centering
      display: table
      width: 100%
      height: 100%
      
      .centered
        display: table-cell
        vertical-align: middle
        width: 100%
        height: 100%
    
    .close
      $size = 8px
      standard-button()
      absolute: top $size right $size
      padding: $size
      line-height: $size
      font-size: 2 * $size
      color: $dark-gray
      text-shadow: 1px 1px 2px #FFFFFF
